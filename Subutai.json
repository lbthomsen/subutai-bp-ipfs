{
    "name": "${environmentName}",
    "description": "IPFS Node",
    "version": "0.0.3",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth", 
    "containers": [
        {
            "hostname": "ipfs0",
            "template": "debian-stretch",
            "peer-criteria": "IPFS-GROUP",
            "size": "${containerSize}", 
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${httpDomain}",
                    "internal-port": "80",
                    "external-port": "80"
                },
                {
                    "protocol": "tcp",
                    "domain": "${ipfsDomain}",
                    "internal-port": "${port}",
                    "external-port": "${port}"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "IPFS-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-ipfs/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain",
                "value": "${domain}"
            }, 
            {
                "key": "port", 
                "value": "${port}"
            }
        ],
        "groups": [
            {
                "name": "ipfs",
                "hostnames": [
                    "ipfs0"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "ipfs",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }, 
        "path": {
            "description": "IPFS Path",
            "type": "string",
            "default": "/ipns/Qm..."
        },
        "httpDomain": {
            "description": "Enter web domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "ipfsDomain": {
            "description": "Enter ipfs domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "port": {
            "description": "Enter port number",
            "type": "string",
            "default": "4001",
            "validation": "[0-9]+"
        }
    }
}
